{
  "name": "marklassian",
  "version": "1.0.1",
  "description": "Converts markdown to the Atlassian Document Format (ADF)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jamsinclair/marklassian.git",
    "directory": "lib"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": ["dist", "README.md", "LICENSE.md"],
  "keywords": [
    "markdown",
    "adf",
    "atlassian",
    "confluence",
    "jira",
    "wiki",
    "markdown-to-adf",
    "md-to-adf"
  ],
  "scripts": {
    "build": "tsc && cp ../LICENSE.md ./ && cp ../README.md ./",
    "test": "ava"
  },
  "license": "MIT",
  "dependencies": {
    "marked": "^15.0.6"
  },
  "devDependencies": {
    "ava": "^6.2.0",
    "tsimp": "^2.0.12",
    "typescript": "^5.7.3"
  },
  "type": "module",
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": ["--import=tsimp"]
  }
}
